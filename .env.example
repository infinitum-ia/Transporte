# Application
APP_NAME="Transpormax Medical Transport Agent"
ENVIRONMENT=development
DEBUG=false

# API
API_HOST=0.0.0.0
API_PORT=8000

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo
OPENAI_TEMPERATURE=0.6
OPENAI_MAX_TOKENS=1500

# Agent
AGENT_NAME=MarÃ­a
COMPANY_NAME=Transpormax
EPS_NAME=Cosalud
MAX_CONVERSATION_TURNS=50
SESSION_TTL_SECONDS=3600

# Outbound Calls (Excel Integration)
# Path to Excel/CSV file with patient data for outbound calls
EXCEL_PATH=/path/to/datos_llamadas_salientes.csv
# Optional: Path to backup folder (defaults to {EXCEL_PATH}/backups)
EXCEL_BACKUP_FOLDER=/path/to/backups

# Langfuse Observability
# Get keys from Langfuse dashboard: http://localhost:3000 -> Settings -> API Keys
LANGFUSE_PUBLIC_KEY=pk-lf-...
LANGFUSE_SECRET_KEY=sk-lf-...
LANGFUSE_HOST=http://localhost:3000
LANGFUSE_ENABLED=true

# Langfuse Server (Docker) - change these for production
LANGFUSE_NEXTAUTH_SECRET=generate-random-secret-here-min-32-chars
LANGFUSE_SALT=generate-random-salt-here-min-32-chars

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60
