# ==========================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ==========================================
# Copy this file to .env and fill in your production values

# Application
APP_NAME="Transformas Medical Transport Agent"
ENVIRONMENT=production
DEBUG=false

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Redis Configuration (use service name when running in Docker)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_TIMEOUT=5
REDIS_MAX_CONNECTIONS=50

# OpenAI Configuration
# IMPORTANT: Replace with your actual OpenAI API key
OPENAI_API_KEY=sk-your-production-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo
OPENAI_TEMPERATURE=0.6
OPENAI_MAX_TOKENS=1500

# Agent Configuration
AGENT_NAME=Mar√≠a
COMPANY_NAME=Transformas
EPS_NAME=Cosalud
AGENT_MODE=llm
MAX_CONVERSATION_TURNS=50
SESSION_TTL_SECONDS=3600

# Outbound Calls (Excel Integration)
# Path inside the container (Docker volume mount)
EXCEL_PATH=/app/data/datos_llamadas_salientes.csv
EXCEL_BACKUP_FOLDER=/app/data/backups

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/app/logs/app.log

# Rate Limiting (adjust based on your needs)
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# CORS Configuration (adjust for your frontend domain)
CORS_ORIGINS=["*"]
# Production example:
# CORS_ORIGINS=["https://your-domain.com", "https://www.your-domain.com"]

# Security
SECRET_KEY=your-secret-key-here-change-this-in-production
API_KEY_HEADER=X-API-Key
# Optional: Set API key for endpoint protection
# API_KEY=your-api-key-here

# Performance
WORKERS=2
KEEP_ALIVE=5
GRACEFUL_TIMEOUT=30
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=50
